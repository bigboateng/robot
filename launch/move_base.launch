<launch>
  <master auto="start"/>

  <!-- Run the map server -->
  <arg name="map_file" default="$(find robot)/yaml/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  <!--- Run AMCL -->
  <!---include file="$(find amcl)/examples/amcl_diff.launch" for differential drive robot-->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find robot)/yaml/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find robot)/yaml/costmap_common_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find robot)/yaml/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find robot)/yaml/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find robot)/yaml/base_local_planner_params.yaml" command="load" />
    <param name="controller_frequency" type="double" value="20.0" />
    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <!---param name="base_global_planner" type="string" value="base_local_planner/TrajectoryPlannerROS" -->
  </node>

  <!---node name="rviz" pkg="rviz" type="rviz" args="-d $(find robot)/rviz/config.rviz"/-->

</launch>
